      <%= f.collection_select :flavor_id, @flavors, :id, :name, prompt: true, include_blank: true, selected: params[:flavor_id] %>
    <% else %>
      <%= f.collection_select :flavor_id, @flavors, :id, :name, prompt: true, include_blank: true  %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
